{
  "manifest_version": 3,
  "name": "我的草稿",
  "description": "这是我的草稿，我希望它像A4纸一样简单。",
  "version": "1.1.0",
  "side_panel": {
    "default_path": "sidepanel.html",
    "openPanelOnActionClick": true
  },
  "icons": {
    "16": "icons/editor.png",
    "32": "icons/editor.png",
    "48": "icons/editor.png",
    "64": "icons/editor.png",
    "128": "icons/editor.png"
  },
  "action": {
    "default_path": "sidepanel.html",
    "default_title": "打开侧边栏面板",
    "default_icon": {
      "16": "icons/editor.png",
      "32": "icons/editor.png",
      "48": "icons/editor.png",
      "64": "icons/editor.png",
      "128": "icons/editor.png"
    }
  },
  "permissions": [
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
